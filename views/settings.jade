doctype html
html
  head
    link(rel='icon', href='favicon.png')
    title Data Base Version Control
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    // Mobile support
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // Material Design fonts
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700', type='text/css')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Bootstrap
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet')
    // Bootstrap Material Design
    link(href='css/bootstrap-material-design.css', rel='stylesheet')
    link(href='css/ripples.min.css', rel='stylesheet')
    // Dropdown.js
    link(href='//cdn.rawgit.com/FezVrasta/dropdown.js/master/jquery.dropdown.css', rel='stylesheet')
    // Page style
    link(href='css/index.css', rel='stylesheet')
    link(href='css/loading.css', rel='stylesheet')
    // jQuery
    // JS
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    script(src='js/parameters.js')
    script(src='js/dbSelect.js')
    script(src='js/settings.js')
    script(src='https://www.w3schools.com/lib/w3data.js')
  body
    // Navigation Bar
    #navbar
      script.
        $("#navbar").load("navbar");
    #sidebar(style='left: 2%; position: absolute;')
      script.
        $("#sidebar").load("sidebar");
    .container
      #myTabContent.tab-content(style='margin-left: 20%; margin-top: 5%;')
        .panel.panel-info
          .panel-heading
            h3.panel-title Settings
          #panel-body-settings.panel-body
            ul
              legend DB Connection
              li#db-server
                b Server: 
              li#db-port
                b Port: 
            ul#remote-list
              legend
                | Remote Repositories   
                i#add-icon.material-icons(style='cursor:pointer', data-toggle='modal', data-target='#new-remote-dialog') add_circle_outline
            // Loadded from settings.js
        #new-remote-dialog.modal.fade(tabindex='-1')
          .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4.modal-title(style='font-weight: bold') New Remote Repository
              .modal-body
                form.form-horizontal
                  fieldset
                    .form-group
                      label.col-md-2.control-label(for='textArea') Alias
                      .col-md-10
                        textarea#alias-box.form-control(rows='1')
                        span.help-block Something like "upstream", "origin" or whatever
                    .form-group
                      label.col-md-2.control-label(for='textArea') URL
                      .col-md-10
                        textarea#url-box.form-control(rows='1')
                        span.help-block HTTP or SSH URL
              .modal-footer
                button#save-button.btn.btn-default(type='button', data-dismiss='modal') Save
    // Scripts
    // Twitter Bootstrap
    script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js')
    // Material Design for Bootstrap
    script(src='js/dist/material.js')
    script(src='js/dist/ripples.min.js')
    script.
      $.material.init();
    // Sliders
    script(src='//cdnjs.cloudflare.com/ajax/libs/noUiSlider/6.2.0/jquery.nouislider.min.js')
    // Dropdown.js
    script(src='https://cdn.rawgit.com/FezVrasta/dropdown.js/master/jquery.dropdown.js')
    script.
      $("#dropdown-menu select").dropdown();
  #footer
    script.
      $("#footer").load("footer");
